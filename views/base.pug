//- base.pug
html
    head
        title #{title}
        block scripts
            script(src='../public/js/jquery-3.5.1.min.js')
            link(rel='stylesheet', href='/css/bootstrap.min.css', type='text/css')
            link(rel='stylesheet', href='/css/main.css', type='text/css')
    body
        nav#nav(class="navbar navbar-expand-lg navbar-dark bg-primary")
            <a class="navbar-brand" href="/">
                <img src="/images/polar-bear-155118_1280.png" height="30" alt="">
            </a>
            block nav
            #user
                if loggedIn
                    ul(class="navbar-nav mr-auto")
                        li(class="nav-item")
                            a(href=`/users/${currentUser._id}` type="button" class="btn btn-primary")= " " + currentUser.name.first + " " + currentUser.name.last
                        li(class="nav-item" style="float: right;")
                            a(class="nav-link" href="/users/logout") Logout
                else
                    ul(class="navbar-nav mr-auto")
                        li(class="nav-item" style="float: right;")
                            a(class="nav-link" href="/users/login") Login
                        li(class="nav-item" style="float: right;")
                            a(class="nav-link" href="/users/signup") Signup
        div#content
            div.text-center
                if successes
                    for success in successes
                        div.alert.alert-success #{ success }
                if errors
                    for error, i in errors
                        div.alert.alert-danger #{ error }
            block content
        footer#footer(class="bg-light text-center text-lg-start")
            div(class="container p-4 pb-0")
                block foot
                        p NodePayment
                        p <strong>MIT-licensed</strong>