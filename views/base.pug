//- base.pug
html
    head
        title #{title}
        block scripts
            script(src='../public/js/jquery-3.5.1.min.js')
            link(rel='stylesheet', href='/css/bootstrap.min.css', type='text/css')
            link(rel='stylesheet', href='/css/main.css', type='text/css')
    body
        nav#nav(class="navbar navbar-expand-lg navbar-dark bg-primary")
            block nav
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item")
                        a(class="nav-link" href="/payment/stripe") Stripe
                    li(class="nav-item")
                        a(class="nav-link" href="/payment/paypal") Paypal
            #user
                if authorised
                  ul(class="navbar-nav mr-auto")
                    p Logged in as
                    a(href="<%=`/users/${currentUser._id}`%>")
                else
                  ul(class="navbar-nav mr-auto")
                    li(class="nav-item")
                      a(class="nav-link" href="/users/signup") Signup
                    li(class="nav-item")
                      a(class="nav-link" href="/users/login") Login
        div#content(class="container")
            div.col-10.ml-sm-auto.px-4
                if successes
                    for success in successes
                        div.alert.alert-success #{ success }
                if errors
                    for error, i in errors
                        div.alert.alert-danger #{ error }
            block content
        footer#footer(class="bg-light text-center text-lg-start")
            div(class="container p-4 pb-0")
                block foot
                        p NodePayment
                        p <strong>MIT-licensed</strong>