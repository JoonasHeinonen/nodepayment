extends ../base.pug

block content
    - var fullname = (user.name.first) + " " + (user.name.last)

    div(class="col-md-6 mx-auto border mt-4 pt-3 border box-white")
        h3 Stripe
        form(action="/charge", method="post")
            article
                label Amount: 5.00€
            script(
                src="//checkout.stripe.com/v2/checkout.js",
                class="stripe-button",
                data-key=STRIPE_PUBLIC_KEY,
                data-locale="auto",
                data-description="Sample charge",
                data-amount="500"
            )

    div(class="col-md-6 mx-auto border mt-4 pt-3 border box-white")
        h3 PayPal
        form(action="/charge", method="post")
            article
                label Amount: 5.00€
            script(
                src="//checkout.stripe.com/v2/checkout.js",
                class="stripe-button",
                data-key=STRIPE_PUBLIC_KEY,
                data-locale="auto",
                data-description="Sample charge",
                data-amount="500"
            )