extends ../base.pug

block content
    div#signup
      <div class="text-center">
         h2 Create your account!
      </div>
      div(class="col-md-6 mx-auto")
         form(action="/users/create" method="post" name="login" autocomplete="off")
            div.row
               div.col
                  div(class="input-group")
                     <input type="text" name="firstname"  class="form-control my-input" id="firstname" placeholder="First name" required>
               div.col
                  div(class="input-group")
                     <input type="text" name="lastname"  class="form-control my-input" id="lastname" placeholder="Last name" required>
            br
            div(class="input-group")
               <input type="email" name="email"  class="form-control my-input" id="email" placeholder="Email" required>
            br
            div(class="input-group")   
               <input type="password" name="password" id="password"  class="form-control my-input" placeholder="Password" required>
            br
            div.row
               div.col
                  div(class="input-group")
                     <input type="number" name="zipcode"  class="form-control my-input" id="zipcode" placeholder="Zipcode" required>
               div.col
                  div(class="input-group")
                     <input type="text" name="municipality"  class="form-control my-input" id="municipality" placeholder="Municipality" required>
            br
            div(class="text-center")
               <button type="submit" class="btn btn-success send-button tx-tfm">Create Your Free Account</button>
            div(class="col-md-12 ")
               hr(class="hr-or")
            div(class="text-center")
               p Have an account already? Please <a href='./login'>login</a> to your account!